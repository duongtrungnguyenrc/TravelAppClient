<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:text="Nhập mật khẩu mới:"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text_rounded"
            android:padding="10dp"
            android:textSize="12sp"
            android:hint="Nhập mật khẩu"
            />
        <ToggleButton
            android:clickable="true"
            android:id="@+id/btnInputType"
            android:background="@drawable/baseline_visibility_16"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:textOn=""
            android:textOff=""
            android:layout_alignRight="@id/edtNewPass"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:text="Nhập lại mật khẩu mới:"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtReNewPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edit_text_rounded"
        android:padding="10dp"
        android:layout_marginBottom="30dp"
        android:textSize="12sp"
        android:hint="Nhập lại mật khẩu"
        />
    <Button
        android:id="@+id/btnSend"
        android:text="Gửi"
        android:textStyle="bold"
        app:backgroundTint="@color/colorPrimary"
        android:background="@drawable/custom_button_ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>